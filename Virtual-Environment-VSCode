#Creating and activating Virtual Environment VSCode


#Navigate to working directory and create Virtual Environment named 'name_of_environment'
python -m venv name_of_environment

#Activate the environment
name_of_environment\Scripts\activate

#or

name_of_environment\bin\activate

#Deactivate the environment
name_of_environment\Scripts\deactivate

#or

name_of_environment\bin\deactivate

